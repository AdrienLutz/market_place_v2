{% extends 'base.html.twig' %}

{% block title %}Market place CDA v2{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Bienvenue sur le market place ✅</h1>
        <div>

            {% if app.user is not null %}
                {% if app.user.hasRole('ROLE_ADMIN') %}
                    <p>Bonjour vous êtes l'admin</p>
                {% endif %}
                <a class="btn btn-danger" href="{{ path('app_logout') }}">Me déconnecter</a>
            {% else %}
                <a class="btn btn-success" href="{{ path('app_login') }}">Me connecter</a>
            {% endif %}

        </div>
    </div>
{% endblock %}