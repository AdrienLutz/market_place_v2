{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <div class="dropdown mb-3">
        <button class="btn btn-secondary nav-link dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Filtrer par catégorie
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
{#        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">#}
            {% for produit in produits %}
            {% for categorie in produit.categorie.nom %}
                <a class="dropdown-item" href="{{ path('app_produits_index', {'category': categorie.id}) }}">{{ categorie.nom }}</a>
            {% endfor %}
            {% endfor %}
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Catégorie</th>
            <th>Actions</th>

        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.categorie.nom }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_produits_show', {'id': produit.id}) }}">Show</a>
                    <a class="btn btn-warning" href="{{ path('app_produits_edit', {'id': produit.id}) }}">Edit</a>

                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_produits_new') }}">Create new</a>
    <a class="btn btn-info" href="{{ path('app_default') }}">Back</a>
{% endblock %}


