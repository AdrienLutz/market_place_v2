                        <a class="btn btn-success" href="{{ path('app_user_show', {'id': user.id}) }}">Détail</a>
                        {% if app.user.hasRole("ROLE_ADMIN") %}
                            <a class="btn btn-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
